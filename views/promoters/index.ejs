<%-include("../partials/header") %>

<%-include("../partials/dropdown") %>

<%-include("../partials/flash") %>

<%-include("../events/slide") %>

<div class="header">
  <h1>Popular Promoters</h1>
  <div class="actions">
    <input type="text" id="searchBox" class="search-input" placeholder="Search promoters..." oninput="filterOrganizers()">
    <button class="toggle-btn" onclick="toggleView()">
      <i class="fa fa-th-large"></i>
    </button>
  </div>
</div>

<!-- List View -->
<div class="organizers-list active" id="listView">
  <% promoters.forEach(promoter => { %>
    <div class="organizer-bar">
      <img src="<%= promoter.profile_image || 'https://via.placeholder.com/100' %>" alt="<%= promoter.username %>">
      <div class="organizer-details">
        <h3><%= promoter.username %></h3>
        <div class="stats">
          🎟️ <%= promoter.totalEvents || 0 %> Events |
          ⭐ <%= promoter.rating || 0 %> (<%= promoter.reviewsCount || 0 %> reviews)
        </div>
        <p>Category: <%= promoter.category || 'Uncategorized' %> | Joined: <%= promoter.createdAt.toDateString() %></p>
       </div>
      <a class="follow-btn" href="/promoter/<%= promoter._id %>">View Profile</a>
    </div>
  <% }) %>
</div>


 <%-include("../partials/footer") %>
