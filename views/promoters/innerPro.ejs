
<div class="profile-container">
  <div class="profile-header">
    <img class="profile-avatar" src="<%= user.profile_image || 'https://via.placeholder.com/120' %>" alt="<%= user.username %>">
    <div class="profile-info">
      <h2><%= user.username %></h2>
      <p><%= user.location || 'No location' %></p>
      <a href="/editUserInfo/<%= user._id %>"><button>edit</button></a>
      <div class="profile-stats">
        üéüÔ∏è <strong><%= totalEvents %></strong> Events |
        ‚≠ê <strong><%= user.reviews || '4.5' %></strong> (98 reviews) |
        üïí Joined <%= new Date(user.createdAt).toLocaleDateString() %>
      </div>

      <div class="profile-socials">
        <% if (user.facebook) { %><a href="<%= user.facebook %>" target="_blank"><i class="fab fa-facebook"></i></a><% } %>
        <% if (user.instagram) { %><a href="<%= user.instagram %>" target="_blank"><i class="fab fa-instagram"></i></a><% } %>
        <% if (user.website) { %><a href="<%= user.website %>" target="_blank"><i class="fas fa-globe"></i></a><% } %>
      </div>
    </div>
  </div>

  <div class="profile-tabs">
    <button class="tab active" onclick="switchTab('events')">Events</button>
    <button class="tab" onclick="switchTab('about')">About</button>
    <button class="tab" onclick="switchTab('reviews')">Reviews</button>
  </div>

  <div class="profile-content">
    <div class="tab-content active" id="events">
      <% if (events.length > 0) { %>
        <div class="event-grid">
          <% events.forEach(event => { %>
            <div class="event-card">
              <img src="<%= event.image || 'https://via.placeholder.com/300x180' %>" alt="<%= event.title %>">
              <div class="event-details">
                <h3><%= event.title %></h3>
                <p><%= new Date(event.date).toDateString() %> | <%= event.location %></p>
                <a class="view-btn" href="/events/<%= event._id %>">View Event</a>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p>No events posted yet.</p>
      <% } %>
    </div>

    <div class="tab-content" id="about">
      <p><%= user.bio || 'No bio available.' %></p>
    </div>

    <div class="tab-content" id="reviews">
      <p>Coming soon: Organizer reviews</p>
    </div>
  </div>
</div>

<script>
  function switchTab(tab) {
    document.querySelectorAll('.tab-content').forEach(div => div.classList.remove('active'));
    document.querySelectorAll('.tab').forEach(btn => btn.classList.remove('active'));
    document.getElementById(tab).classList.add('active');
    event.target.classList.add('active');
  }
</script>

<style>
  .profile-container {
    max-width: 1000px;
    margin: auto;
    padding: 2rem;
  }
  .profile-header {
    display: flex;
    gap: 20px;
    align-items: center;
  }
  .profile-avatar {
    width: 120px;
    height: 120px;
    border-radius: 100%;
    object-fit: cover;
  }
  .profile-info h2 {
    margin-bottom: 5px;
  }
  .profile-stats {
    margin-top: 5px;
    font-size: 15px;
    color: #666;
  }
  .profile-socials a {
    margin-right: 10px;
    font-size: 18px;
    color: #4a90e2;
  }

  .profile-tabs {
    margin-top: 30px;
    border-bottom: 1px solid #ddd;
  }
  .profile-tabs .tab {
    padding: 10px 20px;
    border: none;
    background: none;
    font-size: 16px;
    cursor: pointer;
  }
  .profile-tabs .tab.active {
    border-bottom: 2px solid #4a90e2;
    font-weight: bold;
  }

  .tab-content {
    display: none;
    padding-top: 20px;
  }
  .tab-content.active {
    display: block;
  }

  .event-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 20px;
  }
  .event-card {
    border: 1px solid #eee;
    border-radius: 10px;
    overflow: hidden;
  }
  .event-card img {
    width: 100%;
    height: 180px;
    object-fit: cover;
  }
  .event-details {
    padding: 10px;
  }
  .view-btn {
    display: inline-block;
    margin-top: 10px;
    background: #4a90e2;
    color: white;
    padding: 6px 14px;
    border-radius: 5px;
    text-decoration: none;
  }
</style>
