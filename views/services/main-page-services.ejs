
<div class="services-wrapper">
  
  <div class="section-header">
    <h2 class="services-header">Explore Our Services</h2>
    <a href="/services"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
  </div>

  <div class="services-scroll">
    <% services.forEach(service => { %>
      <div class="service-card">
        <img src="<%= service.images %>" alt="Service Image">
        <div class="service-content">
          <h3><%= service.name?.slice(0, 20) %></h3>
          <p><%= service.description?.slice(0, 80) %>...</p>
          <div class="rating">
            <%= '⭐'.repeat(service.rating) %><%= service.rating < 5 ? '☆' : '' %>
          </div>
          <a href="/showService/<%= service.type %>/<%= service._id %>" class="service-link">
            <%= service.name && (service.name.includes('Book') || service.name.includes('Reserve') || service.name.includes('Hire'))
              ? service.name.split(' ')[0] + ' Now'
              : 'View Details' %>
          </a>
        </div>
      </div>
    <% }); %>
  </div>
</div>
