<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login UI</title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@200;400;600&display=swap" rel="stylesheet" />

  <!-- Swiper CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

  <style>
    :root {
      --primary: #5138ee;
      --white: #fff;
      --grey: #ddd;
      --text: #333;
      --placeholder: #aaa;
      --bg: #eff3ff;
      --hover: #1f0098;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Raleway', sans-serif;
      background: #dcdefe;
    }

    .container {
      max-width: 1200px;
      margin: auto;
      height: 100vh;
      display: flex;
      box-shadow: 0 0 20px rgba(0,0,0,0.05);
      background: white;
    }

    .form-section {
      flex: 1;
      padding: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .form-wrapper {
      max-width: 400px;
      width: 100%;
      text-align: center;
    }

    .profile-logo {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      margin: auto;
      border: 3px solid var(--primary);
      margin-bottom: 20px;
    }

    h2 {
      margin-bottom: 20px;
      color: var(--text);
    }

    .form-group {
      text-align: left;
      margin-bottom: 20px;
      position: relative;
    }

    .form-group label {
      font-size: 14px;
      margin-bottom: 5px;
      display: block;
    }

    .form-group input {
      width: 100%;
      padding: 12px 18px;
      border-radius: 50px;
      border: 1px solid var(--grey);
      font-size: 14px;
    }

    .toggle-password {
      position: absolute;
      right: 20px;
      top: 36px;
      cursor: pointer;
      font-size: 13px;
      color: var(--placeholder);
    }

    .form-links {
      display: flex;
      justify-content: space-between;
      font-size: 14px;
      margin: 10px 0 20px;
    }

    .form-links a {
      text-decoration: none;
      color: var(--primary);
    }

    .login-btn {
      width: 100%;
      padding: 12px;
      background: var(--primary);
      color: white;
      border: none;
      border-radius: 50px;
      font-weight: bold;
      font-size: 15px;
      cursor: pointer;
      transition: 0.3s;
    }

    .login-btn:hover {
      background: var(--hover);
    }

    .separator {
      display: flex;
      align-items: center;
      text-align: center;
      margin: 20px 0;
    }

    .separator::before,
    .separator::after {
      content: '';
      flex: 1;
      border-bottom: 1px solid #ccc;
    }

    .separator:not(:empty)::before {
      margin-right: .75em;
    }

    .separator:not(:empty)::after {
      margin-left: .75em;
    }

    .google-btn {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      border: 1px solid var(--grey);
      padding: 12px;
      border-radius: 50px;
      font-size: 14px;
      cursor: pointer;
      background: white;
      transition: 0.2s;
    }

    .google-btn:hover {
      background: #f2f2f2;
    }

    .google-btn img {
      height: 20px;
    }

    .swiper-section {
      flex: 1;
      background: var(--bg);
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 40px;
    }

    .swiper {
      width: 100%;
      max-width: 450px;
    }

    .swiper-slide {
      text-align: center;
      font-size: 16px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .swiper-slide img {
      width: 100%;
      height: 480px;
      object-fit: cover;
      border-radius: 20px;
    }


    @media (max-width: 768px) {
      .swiper-section {
        display: none;
      }

      .container {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>
	<%-include("../partials/flash") %>
  <div class="container">
    <div class="form-section">
      <div class="form-wrapper">
        <img src="https://i.pravatar.cc/150?img=12" alt="Profile" class="profile-logo" />
        <h2>Welcome Back</h2>
        <form action="/login" method="post">
					<div class="form-group">
            <label>Email</label>
            <input type="email" name="email" placeholder="Enter your email" required />
          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="password" id="password" name="password" placeholder="Enter your password" required />
						<span class="toggle-password" onclick="togglePassword()">üëÅÔ∏è</span>
          </div>
          <div class="form-links">
            <a href="#">Forgot password?</a>
						<p>Don't have an account? <a href="/signup">Register</a></p>
          </div>
          <!-- <input type="submit" class="login-btn"> value> -->
					<input type="submit" class="login-btn" value="login">

          <div class="separator">or</div>

            <div class="google-btn">
              <img src="/images/google_icon.png" alt="Google" />
              <span>Continue with Google</span>
            </div>
        </form>
      </div>
    </div>

    <div class="swiper-section">
      <div class="swiper">
        <div class="swiper-wrapper">
          <div class="swiper-slide">
            <img src="images/1.jpg" />
            <!-- <p>Access your projects securely</p> -->
          </div>
          <div class="swiper-slide">
            <img src="images/2.jpg" />
            <!-- <p>Work from anywhere, anytime</p> -->
          </div>
          <div class="swiper-slide">
            <img src="images/3.jpg" />
            <!-- <p>Manage your tasks with ease</p> -->
          </div>
        </div>
        <div class="swiper-pagination"></div>
      </div>
    </div>
  </div>

  <!-- Swiper JS -->
  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

  <!-- Swiper Init -->
  <script>
    const swiper = new Swiper('.swiper', {
      loop: true,
      autoplay: { delay: 4000 },
      pagination: { el: '.swiper-pagination' }
    });

    function togglePassword() {
      const password = document.getElementById('password');
      const toggle = document.querySelector('.toggle-password');
      if (password.type === 'password') {
        password.type = 'text';
        toggle.textContent = 'Hide';
      } else {
        password.type = 'password';
        toggle.textContent = 'üëÅÔ∏è';
      }
    }
  </script>
</body>
</html>
