<%-include("../partials/header") %>

<%-include("../partials/dropdown") %>

<%-include("../partials/flash") %>

<%-include(".././Events/slide") %>

<div class="header">
  <h1>Popular Vendors</h1>
  <div class="actions">
    <input type="text" id="searchBox" class="search-input" placeholder="Search organizers..." oninput="filterOrganizers()">
    <button class="toggle-btn" onclick="toggleView()">
      <i class="fa fa-th-large"></i>
    </button>
  </div>
</div>

<!-- List View -->
<div class="organizers-list active" id="listView">
  <% organizers.forEach(org => { %>
    <div class="organizer-bar">
      <img src="<%= org.profile_image || 'https://via.placeholder.com/100' %>" alt="<%= org.username %>">
      <div class="organizer-details">
        <h3><%= org.username %></h3>
        <div class="stats">
          🎟️ <%= org.totalEvents || 0 %> Events |
          ⭐ <%= org.rating || 0 %> (<%= org.reviewsCount || 0 %> reviews)
        </div>
        <p>Category: <%= org.category || 'Uncategorized' %> | Joined: <%= org.createdAt.toDateString() %></p>
       </div>
      <a class="follow-btn" href="/organizer/<%= org._id %>">View Profile</a>
    </div>
  <% }) %>
</div>


<!-- Card View -->
<div class="organizers-grid" id="gridView">
  <% organizers.forEach(org => { %>
    <div class="organizer-card">
      <img src="<%= org.profile_image || 'https://via.placeholder.com/100' %>" alt="<%= org.username %>">
      <h3><%= org.username %></h3>
      <div class="stats">
        🎟️ <%= org.totalEvents || 0 %> Events |
        ⭐ <%= org.rating || 0 %> (<%= org.reviewsCount || 0 %> reviews)
      </div>
      <p>Category: <%= org.category || 'Uncategorized' %> | Joined: <%= org.createdAt.toDateString() %></p>
      <a class="follow-btn" href="/organizer/<%= org._id %>">View Profile</a>
    </div>
  <% }) %>
</div>



 <%-include("../partials/footer") %>
