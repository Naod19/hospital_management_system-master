<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Settings - Event Management System</title>
<style>
  /* Reset */
  * {
    box-sizing: border-box;
  }
  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: #f9fafb;
    margin: 0;
    padding: 0;
    color: #333;
  }

  .setting-container {
    max-width: 900px;
    margin: 40px auto;
    background: white;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgb(0 0 0 / 0.1);
    padding: 30px;
  }

  h1 {
    text-align: center;
    margin-bottom: 30px;
    /*color: #005f73;*/
  }

  /* Tabs nav */
  .settigtabs {
    display: flex;
    border-bottom: 2px solid #e0e0e0;
    overflow-x: auto;
  }

  .settingtab {
    padding: 14px 24px;
    cursor: pointer;
    border: none;
    background: none;
    font-weight: 600;
    color: #555;
    border-bottom: 3px solid transparent;
    transition: all 0.3s ease;
    flex-shrink: 0;
  }

  .settingtab.active {
    border-color: #005f73;
    color: #005f73;
  }

  /* Tab content */
  .setting-tab-content {
    padding: 20px 0;
  }

  form {
    max-width: 800px;
    margin: 0 auto;
  }

  label {
    display: block;
    font-weight: 600;
    margin-bottom: 6px;
    margin-top: 20px;
    color: #222;
  }

  input[type="text"],
  input[type="email"],
  input[type="password"],
  input[type="tel"],
  select {
    width: 100%;
    padding: 10px 14px;
    border: 1.8px solid #ccc;
    border-radius: 6px;
    font-size: 16px;
    transition: border-color 0.3s ease;
  }

  input[type="text"]:focus,
  input[type="email"]:focus,
  input[type="password"]:focus,
  input[type="tel"]:focus,
  select:focus {
    border-color: #005f73;
    outline: none;
  }

  .checkbox-group {
    margin-top: 15px;
  }

  .checkbox-group label {
    font-weight: normal;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  input[type="checkbox"] {
    width: 18px;
    height: 18px;
  }

  button[value="settingstaff"] {
    background-color: #005f73;
    color: white;
    border: none;
    padding: 12px 30px;
    font-size: 16px;
    border-radius: 6px;
    cursor: pointer;
    margin-top: 30px;
    transition: background-color 0.3s ease;
  }

  button[value="settingstaff"]:hover {
    background-color: #0a9396;
  }

  /* Responsive */
  @media (max-width: 600px) {
    .settigtabs {
      flex-wrap: nowrap;
    }
    .settingtab {
      padding: 12px 16px;
      font-size: 14px;
    }
    .setting-container {
      margin: 20px 10px;
      padding: 20px;
    }
  }
</style>
</head>
<body>

<div class="setting-container">
  <h1>Settings</h1>

  <!-- Tabs -->
  <div class="settingtabs" role="tablist">
    <button class="settingtab active" role="tab" aria-selected="true" aria-controls="profile" id="tab-profile">Profile</button>
    <button class="settingtab"  role="tab" aria-selected="false" aria-controls="security" id="tab-security">Security</button>
    <button class="settingtab"  role="tab" aria-selected="false" aria-controls="notifications" id="tab-notifications">Notifications</button>
    <button class="settingtab"  role="tab" aria-selected="false" aria-controls="payment" id="tab-payment">Payment</button>
  </div>

  <!-- Tab content -->
  <div id="profile" class="setting-tab-content" role="tabpanel" aria-labelledby="tab-profile">
    <form id="profile-form">
      <label for="fullName">Full Name</label>
      <input type="text" id="fullName" name="fullName" placeholder="Your full name" required />

      <label for="email">Email Address</label>
      <input type="email" id="email" name="email" placeholder="you@example.com" required />

      <label for="phone">Phone Number</label>
      <input type="tel" id="phone" name="phone" placeholder="+1234567890" />

      <label for="timezone">Timezone</label>
      <select id="timezone" name="timezone" required>
        <option value="" disabled selected>Select your timezone</option>
        <option value="UTC-12:00">UTC-12:00</option>
        <option value="UTC-11:00">UTC-11:00</option>
        <option value="UTC-10:00">UTC-10:00</option>
        <option value="UTC-09:00">UTC-09:00</option>
        <option value="UTC-08:00">UTC-08:00 (PST)</option>
        <option value="UTC-07:00">UTC-07:00 (MST)</option>
        <option value="UTC-06:00">UTC-06:00 (CST)</option>
        <option value="UTC-05:00">UTC-05:00 (EST)</option>
        <option value="UTC+00:00">UTC+00:00 (GMT)</option>
        <option value="UTC+01:00">UTC+01:00 (CET)</option>
        <option value="UTC+02:00">UTC+02:00 (EET)</option>
        <option value="UTC+03:00">UTC+03:00 (EAT)</option>
        <option value="UTC+05:30">UTC+05:30 (IST)</option>
        <option value="UTC+08:00">UTC+08:00 (CST)</option>
        <option value="UTC+09:00">UTC+09:00 (JST)</option>
        <option value="UTC+10:00">UTC+10:00 (AEST)</option>
        <option value="UTC+12:00">UTC+12:00 (NZST)</option>
      </select>

      <label for="language">Language Preference</label>
      <select id="language" name="language" required>
        <option value="" disabled selected>Select language</option>
        <option value="en">English</option>
        <option value="fr">French</option>
        <option value="es">Spanish</option>
        <option value="ar">Arabic</option>
        <option value="zh">Chinese</option>
      </select> <br>

      <button value="settingstaff" type="submit">Save Profile</button>
    </form>
  </div>

  <div id="security" class="setting-tab-content" role="tabpanel" aria-labelledby="tab-security" hidden>
    <form id="security-form">
      <label for="currentPassword">Current Password</label>
      <input type="password" id="currentPassword" name="currentPassword" placeholder="Current password" required />

      <label for="newPassword">New Password</label>
      <input type="password" id="newPassword" name="newPassword" placeholder="New password" required />

      <label for="confirmPassword">Confirm New Password</label>
      <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm new password" required />

      <div class="checkbox-group">
        <label><input type="checkbox" id="enable2fa" name="enable2fa" /> Enable Two-Factor Authentication (2FA)</label>
      </div>

      <button value="settingstaff" type="submit">Update Password & Security</button>
    </form>
  </div>

  <div id="notifications" class="setting-tab-content" role="tabpanel" aria-labelledby="tab-notifications" hidden>
    <form id="notifications-form">
      <div class="checkbox-group">
        <label><input type="checkbox" name="emailNotifications" checked /> Email Notifications</label>
      </div>
      <div class="checkbox-group">
        <label><input type="checkbox" name="smsNotifications" /> SMS Notifications</label>
      </div>
      <div class="checkbox-group">
        <label><input type="checkbox" name="pushNotifications" /> Push Notifications</label>
      </div>
      <div class="checkbox-group">
        <label><input type="checkbox" name="newsletter" checked /> Receive Newsletter & Promotions</label>
      </div>

      <button value="settingstaff" type="submit">Save Notification Settings</button>
    </form>
  </div>

  <div id="payment" class="setting-tab-content" role="tabpanel" aria-labelledby="tab-payment" hidden>
    <form id="payment-form">
      <label for="cardName">Cardholder Name</label>
      <input type="text" id="cardName" name="cardName" placeholder="Name on card" required />

      <label for="cardNumber">Card Number</label>
      <input type="text" id="cardNumber" name="cardNumber" placeholder="1234 5678 9012 3456" maxlength="19" required />

      <label for="expiryDate">Expiry Date</label>
      <input type="text" id="expiryDate" name="expiryDate" placeholder="MM/YY" maxlength="5" required />

      <label for="cvv">CVV</label>
      <input type="password" id="cvv" name="cvv" placeholder="123" maxlength="4" required />

      <label for="billingAddress">Billing Address</label>
      <input type="text" id="billingAddress" name="billingAddress" placeholder="Street, City, Country" />

      <button value="settingstaff" type="submit">Save Payment Info</button>
    </form>
  </div>
</div>

<script>
  // Tab switching logic
  const settigtabs = document.querySelectorAll('.settingtab');
  const tabContents = document.querySelectorAll('.setting-tab-content');

  settigtabs.forEach((tab) => {
    tab.addEventListener('click', () => {
      const target = tab.getAttribute('aria-controls');

      // Update tabs aria and active class
      settigtabs.forEach(t => {
        t.classList.remove('active');
        t.setAttribute('aria-selected', 'false');
      });
      tab.classList.add('active');
      tab.setAttribute('aria-selected', 'true');

      // Show relevant tab content
      tabContents.forEach(content => {
        if (content.id === target) {
          content.hidden = false;
        } else {
          content.hidden = true;
        }
      });
    });
  });

  // Optional: Basic form submission handlers (prevent default for demo)
  // document.querySelectorAll('form').forEach(form => {
  //   form.addEventListener('submit', (e) => {
  //     e.preventDefault();
  //     alert('Settings saved successfully!');
  //   });
  // });
</script>

</body>
</html>
