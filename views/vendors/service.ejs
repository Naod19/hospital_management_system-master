<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Create Service</title>
  <style>

    .form-container form {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
      background: white;
      padding: 10px;
      border-radius: 12px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      margin: auto;
    }
 
    label {
      display: block;
      font-weight: bold;
      margin-bottom: 6px;
    }
    input, select {
      width: 90%;
      padding: 10px;
      border-radius: 6px;
      border: 1px solid #ccc;
    }
    .extra-group {
      display: none;
      margin-top: 10px;
    }
    button {
      padding: 12px 20px;
      background-color: #4a90e2;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
    }
    button:hover {
      background-color: #357ab7;
    }
  </style>
</head>
<body>

  <div class="form-container">
    <!-- <h2>Create Service</h2> -->
    <form action="/createService" method="POST" enctype="multipart/form-data">

      <div class="form-group">
        <label for="name">Service Name</label>
        <input type="text" name="name" id="name" required />
      </div>

      <div class="form-group">
        <label for="location">Location</label>
        <input type="text" name="location" id="location">
      </div>

      <div class="form-group">
        <label for="contact_phone">Phone</label>
        <input type="text" name="phone" id="contact_phone">
      </div>

      <div class="form-group">
        <label for="contact_email">Email</label>
        <input type="email" name="email" id="contact_email">
      </div>

      <div class="form-group">
        <label for="images">Service's Images</label>
        <input type="file" name="images" id="images" multiple>
      </div>

      <div class="form-group">
        <label for="type">Category</label>
        <select name="category" id="type" required>
          <option value="">-- Select Type --</option>
          <option value="hotel">Hotel</option>
          <option value="car">Car</option>
          <option value="eventhall">Event Hall</option>
          <option value="photographer">Photographer</option>
          <option value="decorator">Decorator</option>
          <option value="caterer">Caterer</option>
          <option value="dj">DJ</option>
          <option value="makeup_artist">Makeup Artist</option>
          <!-- <option value="other">Other</option> -->
        </select>
      </div>

      <!-- Hotel Fields -->
      <div class="form-group extra-group" id="hotelFields">
        <div class="form-group">
          <label for="price_per_night">Price per Night</label>
          <input type="number" name="price_per_night" id="price_per_night" step="0.01">
        </div>

        <div class="form-group">
          <label for="facilities">Amenities (comma-separated)</label>
          <input type="text" name="amenities" id="facilities" placeholder="Wi-Fi, Pool, Parking">
        </div>

        <div class="form-group">
          <label for="check_in_time">Check-in Time</label>
          <input type="time" name="check_in_time" id="check_in_time">
        </div>

        <div class="form-group">
          <label for="check_out_time">Check-out Time</label>
          <input type="time" name="check_out_time" id="check_out_time">
        </div>

        <button type="submit">Create</button>

      </div>

      <!-- Car Fields -->
      <div class="form-group extra-group" id="carFields">

        <div class="form-group">
          <label for="brand">Brand</label>
          <input type="text" name="brand" id="brand" placeholder="Brand Name">
        </div>

        <div class="form-group">
          <label for="model">Model</label>
          <input type="text" name="model" id="model" placeholder="model number">
        </div>

        <div class="form-group">
          <label for="Features">Features</label>
          <input type="text" name="features" id="features" placeholder="features">
        </div>

        <div class="form-group">
          <label for="price_per_day">Price Per Day</label>
          <input type="number" name="rent_per_day" id="price_per_day" step="0.01">
        </div>

        <div class="form-group">
          <label for="seats">Number of Seats</label>
          <input type="number" name="seating_capacity" id="seats">
        </div>

        <div class="form-group">
          <label for="transmission">Transmission</label>
          <select name="transmission" id="transmission">
            <option value="Automatic">Automatic</option>
            <option value="Manual">Manual</option>
          </select>
        </div>

        <div class="form-group">
          <label for="fuel_type">Fuel Type</label>
          <select name="fuel_type" id="fuel_type">
            <option value="Petrol">Petrol</option>
            <option value="Diesel">Diesel</option>
            <option value="Electric">Electric</option>
          </select>
        </div>

        <div class="form-group">
          <label><input type="checkbox" name="air_conditioning"> Air Conditioning</label>
        </div>

        <button type="submit">Create</button>

      </div>

      <!-- Event Hall Fields -->
      <div class="form-group extra-group" id="eventhallFields">

        <div class="form-group">
          <label for="capacity">Capacity</label>
          <input type="number" name="capacity" id="capacity">
        </div>

        <div class="form-group">
          <label for="price_per_day">Booking Price (Per Day)</label>
          <input type="number" name="price_per_day" id="price_per_day" step="0.01">
        </div>

        <div class="form-group">
          <label for="facilities">Facilities</label>
          <input type="text" name="facilities" id="facilities" placeholder="Projector, Sound System, AC Fun">
        </div>

        <button type="submit">Create</button>

      </div>

      <!-- Event Hall Fields -->
      <div class="form-group extra-group" id="photographerFields">

        <div class="form-group">
          <label for="specialty">Specialty</label>
          <input type="text" name="photographer_specialties" id="specialty">
        </div>

        <div class="form-group">
          <label for="price_per_session">Price Per Session</label>
          <input type="number" name="photographer_price" id="price_per_session" step="0.01">
        </div>

        <div class="form-group">
          <label for="experience_years">Experience (Years)</label>
          <input type="number" name="photographer_years" id="experience_years">
        </div>

        <div class="form-group">
          <label for="portfolio_link">Portfolio Link</label>
          <input type="text" name="photographer_portfolio" id="portfolio_link">
        </div>

        <button type="submit">Create</button>

      </div>

      <!-- Event Hall Fields -->
      <div class="form-group extra-group" id="decoratorFields">

        <div class="form-group">
          <label for="services_offered">Services Offered</label>
          <input type="text" name="services_offered" id="services_offered">
        </div>

        <div class="form-group">
          <label for="price_range">Price Range</label>
          <input type="text" name="decorator_price" id="price_range" placeholder="e.g., $300 - $1000">
        </div>

        <div class="form-group">
          <label for="experience_years">Experience (Years)</label>
          <input type="number" name="decorator_years" id="experience_years">
        </div>

        <div class="form-group">
          <label for="portfolio_link">Portfolio Link</label>
          <input type="text" name="portfolio" id="portfolio">
        </div>

        <button type="submit">Create</button>

      </div>

      <!-- caterer Fields -->
      <div class="form-group extra-group" id="catererFields">

        <div class="form-group">
          <label for="cuisine_specialties">Cuisine Specialties</label>
          <input type="text" name="cuisine_types" id="cuisine_specialties" placeholder="e.g., African, Continental, Indian">
        </div>

        <div class="form-group">
          <label for="price_per_plate">Price Per Plate ($)</label>
          <input type="number" name="price_per_plate" id="price_per_plate" step="0.01">
        </div>

        <div class="form-group">
          <label for="min_order">Minimum Order Quantity</label>
          <input type="number" name="minimum_order" id="min_order">
        </div>

        <div class="form-group">
          <label for="packages">Service Packages</label>
          <textarea name="packages" id="packages" placeholder="Describe your available packages"></textarea>
        </div>

        <div class="form-group">
          <label><input type="checkbox" name="yes"> Vegetarian Options Available</label>
        </div>

        <div class="form-group">
          <label><input type="checkbox" name="yes"> Halal Options Available</label>
        </div>

        <div class="form-group">
          <label for="menu_link">Website / Menu Link</label>
          <input type="url" name="menu_items" id="menu_link">
        </div>

        <button type="submit">Create</button>

      </div>


      <!-- DJs Fields -->
      <div class="form-group extra-group" id="djFields">

        <div class="form-group">
          <label for="music_genre">Genre / Music Style</label>
          <input type="text" name="dj_genres" id="music_genre" placeholder="e.g., Afrobeat, House, Hip-Hop">
        </div>

        <div class="form-group">
          <label for="hourly_rate">Hourly Rate ($)</label>
          <input type="number" name="dj_price" id="hourly_rate" step="0.01">
        </div>

        <div class="form-group">
          <label for="equipment">Available Equipment</label>
          <input type="text" name="dj_equipment" id="equipment" placeholder="e.g., Speakers, Turntable, Lights">
        </div>

        <div class="form-group">
          <label for="experience_years">Years of Experience</label>
          <input type="number" name="dj_years" id="experience_years">
        </div>

        <div class="form-group">
          <label for="music_link">Website / SoundCloud</label>
          <input type="url" name="dj_link" id="sample_mix_link">
        </div>

        <button type="submit">Create</button>

      </div>



      <!-- makeup_artist Fields -->
      <div class="form-group extra-group" id="makeup_artistFields">

        <div class="form-group">
          <label for="specialty">Specialty (e.g., Bridal, Glam)</label>
          <input type="text" name="makeup_specialties" id="specialty">
        </div>

        <div class="form-group">
          <label for="packages">Service Packages</label>
          <textarea name="makeup_packages" id="packages" placeholder="Describe your available packages"></textarea>
        </div>

        <div class="form-group">
          <label for="price_range">Price Range ($)</label>
          <input type="text" name="makeup_price" id="price_range" placeholder="e.g., 100 - 500">
        </div>

        <div class="form-group">
          <label for="experience_years">Years of Experience</label>
          <input type="number" name="makeup_years" id="experience_years">
        </div>

        <div class="form-group">
          <label for="portfolio_link">Instagram / Portfolio Link</label>
          <input type="url" name="makeup_link" id="portfolio_link">
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          <textarea name="description" id="description"></textarea>
        </div>

        <button type="submit">Create</button>

      </div>



      <!-- other Fields -->
      <!-- <div class="form-group extra-group" id="otherFields">

        <div class="form-group">
          <label for="custom_type">Category / Custom Type</label>
          <input type="text" name="custom_type" id="custom_type" placeholder="e.g., Security, Transport, etc.">
        </div>

        <div class="form-group">
          <label for="price">Price / Rate</label>
          <input type="text" name="price" id="price" placeholder="e.g., $300 per hour">
        </div>

        <div class="form-group">
          <label for="external_link">Website / Social Link</label>
          <input type="url" name="external_link" id="external_link">
        </div>

      </div> -->



      <!-- Add more fields for other types here if needed -->


    </form>
  </div>

  <script>
    const typeSelect = document.getElementById('type');
    const fields = {
      hotel: document.getElementById('hotelFields'),
      car: document.getElementById('carFields'),
      eventhall: document.getElementById('eventhallFields'),
      dj: document.getElementById('djFields'),
      makeup_artist: document.getElementById('makeup_artistFields'),
      decorator: document.getElementById('decoratorFields'),
      caterer: document.getElementById('catererFields'),
      // other: document.getElementById('otherFields'),
      photographer: document.getElementById('photographerFields'),
      // Add more types as needed
    };

    function toggleExtraFields() {
      const selected = typeSelect.value;
      Object.keys(fields).forEach(type => {
        fields[type].style.display = (type === selected) ? 'block' : 'none';
      });
    }

    typeSelect.addEventListener('change', toggleExtraFields);
    window.addEventListener('DOMContentLoaded', toggleExtraFields);
  </script>

</body>
</html>
