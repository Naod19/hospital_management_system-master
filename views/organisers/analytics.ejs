  <script>
    new Chart(document.getElementById('ticketSalesChart').getContext('2d'), {
      type: 'line',
      data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
        datasets: [{
          label: 'Ticket Sales',
          data: [500, 800, 600, 1200, 1500, 1800],
          borderColor: '#3b82f6',
          backgroundColor: 'rgba(59, 130, 246, 0.2)',
          borderWidth: 2,
          tension: 0.3,
          fill: true
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: {
            position: 'top',
          },
        }
      }
    });

    new Chart(document.getElementById('ticketSourceChart').getContext('2d'), {
      type: 'doughnut',
      data: {
        labels: ['Online', 'Offline', 'At the Door'],
        datasets: [{
          label: 'Ticket Source',
          data: [50, 25, 15],
          backgroundColor: ['#3b82f6', '#10b981', '#f59e0b'],
          hoverOffset: 10
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: {
            position: 'bottom',
          }
        }
      }
    });

    new Chart(document.getElementById('usersGrowthChart').getContext('2d'), {
      type: 'bar',
      data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
        datasets: [{
          label: 'New Users',
          data: [100, 120, 180, 140, 220, 300],
          backgroundColor: '#4f46e5'
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: {
            display: false
          }
        }
      }
    });

    new Chart(document.getElementById('eventsGrowthChart').getContext('2d'), {
      type: 'line',
      data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
        datasets: [{
          label: 'Events Created',
          data: [10, 15, 8, 12, 18, 22],
          borderColor: '#ec4899',
          backgroundColor: 'rgba(236, 72, 153, 0.2)',
          tension: 0.4,
          fill: true
        }]
      },
      options: {
        responsive: true
      }
    });

    new Chart(document.getElementById('usersRolesChart').getContext('2d'), {
      type: 'pie',
      data: {
        labels: ['Admin', 'Organizer', 'Attendee'],
        datasets: [{
          label: 'User Roles',
          data: [10, 30, 60],
          backgroundColor: ['#9333ea', '#f43f5e', '#14b8a6']
        }]
      },
      options: {
        responsive: true,
        plugins: {
