<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Payment History</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f4f7fa;
      margin: 0;
      padding: 20px;
    }
    .container {
      max-width: 1000px;
      margin: auto;
      background: white;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 0 10px #ddd;
    }
    h2 {
      text-align: center;
      margin-bottom: 20px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
    }
    th, td {
      padding: 12px;
      border-bottom: 1px solid #eee;
      text-align: left;
    }
    th {
      background-color: #f0f0f0;
    }
    tr:hover {
      background-color: #f9f9f9;
    }
    .status-success {
      color: green;
      font-weight: bold;
    }
    .status-failed {
      color: red;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>Your Payment History</h2>
    <% if (payments.length === 0) { %>
      <p>No payment records found.</p>
    <% } else { %>
      <table>
        <thead>
          <tr>
            <th>Event / Service</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% payments.forEach(payment => {
            const item = payment.booking?.item;
            const itemName = item?.title || item?.name || 'N/A';
          %>
            <tr>
              <td><%= itemName %></td>
              <td>$<%= payment.amount.toFixed(2) %></td>
              <td class="<%= payment.status === 'success' ? 'status-success' : 'status-failed' %>">
                <%= payment.status %>
              </td>
              <td><%= new Date(payment.createdAt).toLocaleString() %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>
  </div>
</body>
</html>
