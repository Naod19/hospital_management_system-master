<div class="comm-container">
  <div class="chat-sidebar">
    <h2>Chats</h2>
    <div class="search-box">
      <input type="text" placeholder="Search conversations..." />
    </div>
    <div class="conversation-list">
      <div class="conversation">
        <span><span class="status-dot online"></span><span class="name">John Doe</span></span>
        <span class="badge">2</span>
      </div>
      <div class="conversation">
        <span><span class="status-dot offline"></span><span class="name">Event Support</span></span>
        <span class="badge">1</span>
      </div>
      <div class="conversation">
        <span><span class="status-dot online"></span><span class="name">Jane Smith</span></span>
      </div>
      <div class="conversation">
        <span><span class="status-dot offline"></span><span class="name">Admin Team</span></span>
      </div>
      <div class="conversation">
        <span><span class="status-dot online"></span><span class="name">Ticket Sales</span></span>
      </div>
    </div>
  </div>

  <div class="chat-area">
    <div class="chat-header">John Doe</div>
    <div class="chat-messages" id="chatMessages">
      <div class="message received">Hi there!<small>09:01 AM</small></div>
      <div class="message sent">Hello! How can I help you?<small>09:02 AM</small></div>
      <div class="message received">I need help with my event ticket.<small>09:03 AM</small></div>
    </div>
    <div class="chat-input">
      <input type="text" id="chatInput" placeholder="Type a message..." />
      <button onclick="sendMessage()">Send</button>
    </div>
  </div>
</div>
 
