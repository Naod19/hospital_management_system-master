
<div class="usrset-container">
  <h1 class="usrset-title">Settings</h1>

  <!-- Tabs -->
  <div class="usrset-tabs" role="tablist">
    <button class="usrset-tab-btn active" role="tab" aria-selected="true" aria-controls="usrset-profile" id="usrset-tab-profile">Profile</button>
    <button class="usrset-tab-btn" role="tab" aria-selected="false" aria-controls="usrset-security" id="usrset-tab-security">Security</button>
    <button class="usrset-tab-btn" role="tab" aria-selected="false" aria-controls="usrset-notifications" id="usrset-tab-notifications">Notifications</button>
    <button class="usrset-tab-btn" role="tab" aria-selected="false" aria-controls="usrset-payment" id="usrset-tab-payment">Payment</button>
  </div>

  <!-- Profile Tab -->
  <div id="usrset-profile" class="usrset-tab-content" role="tabpanel" aria-labelledby="usrset-tab-profile">
    <form class="usrset-form" id="usrset-profile-form">
      <label class="usrset-label" for="usrset-fullname">Full Name</label>
      <input class="usrset-input" type="text" id="usrset-fullname" name="fullName" placeholder="Your full name" required />

      <label class="usrset-label" for="usrset-email">Email Address</label>
      <input class="usrset-input" type="email" id="usrset-email" name="email" placeholder="you@example.com" required />

      <label class="usrset-label" for="usrset-phone">Phone Number</label>
      <input class="usrset-input" type="tel" id="usrset-phone" name="phone" placeholder="+1234567890" />

      <label class="usrset-label" for="usrset-timezone">Timezone</label>
      <select class="usrset-select" id="usrset-timezone" name="timezone" required>
        <option value="" disabled selected>Select your timezone</option>
        <option value="UTC-12:00">UTC-12:00</option>
        <option value="UTC-11:00">UTC-11:00</option>
        <option value="UTC-10:00">UTC-10:00</option>
        <option value="UTC-09:00">UTC-09:00</option>
        <option value="UTC-08:00">UTC-08:00 (PST)</option>
        <option value="UTC-07:00">UTC-07:00 (MST)</option>
        <option value="UTC-06:00">UTC-06:00 (CST)</option>
        <option value="UTC-05:00">UTC-05:00 (EST)</option>
        <option value="UTC+00:00">UTC+00:00 (GMT)</option>
        <option value="UTC+01:00">UTC+01:00 (CET)</option>
        <option value="UTC+02:00">UTC+02:00 (EET)</option>
        <option value="UTC+03:00">UTC+03:00 (EAT)</option>
        <option value="UTC+05:30">UTC+05:30 (IST)</option>
        <option value="UTC+08:00">UTC+08:00 (CST)</option>
        <option value="UTC+09:00">UTC+09:00 (JST)</option>
        <option value="UTC+10:00">UTC+10:00 (AEST)</option>
        <option value="UTC+12:00">UTC+12:00 (NZST)</option>
      </select>

      <label class="usrset-label" for="usrset-language">Language Preference</label>
      <select class="usrset-select" id="usrset-language" name="language" required>
        <option value="" disabled selected>Select language</option>
        <option value="en">English</option>
        <option value="fr">French</option>
        <option value="es">Spanish</option>
        <option value="ar">Arabic</option>
        <option value="zh">Chinese</option>
      </select> <br>

      <button class="usrset-btn" type="submit">Save Profile</button>
    </form>
  </div>

  <!-- Security Tab -->
  <div id="usrset-security" class="usrset-tab-content" role="tabpanel" aria-labelledby="usrset-tab-security" hidden>
    <form class="usrset-form" id="usrset-security-form">
      <label class="usrset-label" for="usrset-currentpass">Current Password</label>
      <input class="usrset-input" type="password" id="usrset-currentpass" name="currentPassword" placeholder="Current password" required />

      <label class="usrset-label" for="usrset-newpass">New Password</label>
      <input class="usrset-input" type="password" id="usrset-newpass" name="newPassword" placeholder="New password" required />

      <label class="usrset-label" for="usrset-confirmpass">Confirm New Password</label>
      <input class="usrset-input" type="password" id="usrset-confirmpass" name="confirmPassword" placeholder="Confirm new password" required />

      <div class="usrset-checkbox-group">
        <label><input class="usrset-checkbox" type="checkbox" id="usrset-enable2fa" name="enable2fa" /> Enable Two-Factor Authentication (2FA)</label>
      </div>

      <button class="usrset-btn" type="submit">Update Password & Security</button>
    </form>
  </div>

  <!-- Notifications Tab -->
  <div id="usrset-notifications" class="usrset-tab-content" role="tabpanel" aria-labelledby="usrset-tab-notifications" hidden>
    <form class="usrset-form" id="usrset-notifications-form">
      <div class="usrset-checkbox-group">
        <label><input class="usrset-checkbox" type="checkbox" name="emailNotifications" checked /> Email Notifications</label>
      </div>
      <div class="usrset-checkbox-group">
        <label><input class="usrset-checkbox" type="checkbox" name="smsNotifications" /> SMS Notifications</label>
      </div>
      <div class="usrset-checkbox-group">
        <label><input class="usrset-checkbox" type="checkbox" name="pushNotifications" /> Push Notifications</label>
      </div>
      <div class="usrset-checkbox-group">
        <label><input class="usrset-checkbox" type="checkbox" name="newsletter" checked /> Receive Newsletter & Promotions</label>
      </div>

      <button class="usrset-btn" type="submit">Save Notification Settings</button>
    </form>
  </div>

  <!-- Payment Tab -->
  <div id="usrset-payment" class="usrset-tab-content" role="tabpanel" aria-labelledby="usrset-tab-payment" hidden>
    <form class="usrset-form" id="usrset-payment-form">
      <label class="usrset-label" for="usrset-cardname">Cardholder Name</label>
      <input class="usrset-input" type="text" id="usrset-cardname" name="cardName" placeholder="Name on card" required />

      <label class="usrset-label" for="usrset-cardnumber">Card Number</label>
      <input class="usrset-input" type="text" id="usrset-cardnumber" name="cardNumber" placeholder="1234 5678 9012 3456" maxlength="19" required />

      <label class="usrset-label" for="usrset-expiry">Expiry Date</label>
      <input class="usrset-input" type="text" id="usrset-expiry" name="expiryDate" placeholder="MM/YY" maxlength="5" required />

      <label class="usrset-label" for="usrset-cvv">CVV</label>
      <input class="usrset-input" type="password" id="usrset-cvv" name="cvv" placeholder="123" maxlength="4" required />

      <label class="usrset-label" for="usrset-billingaddr">Billing Address</label>
      <input class="usrset-input" type="text" id="usrset-billingaddr" name="billingAddress" placeholder="Street, City, Country" />

      <button class="usrset-btn" type="submit">Save Payment Info</button>
    </form>
  </div>
</div>

<script>
  // Tab switching logic
  const usrsetTabs = document.querySelectorAll('.usrset-tab-btn');
  const usrsetTabContents = document.querySelectorAll('.usrset-tab-content');

  usrsetTabs.forEach((tab) => {
    tab.addEventListener('click', () => {
      const target = tab.getAttribute('aria-controls');

      usrsetTabs.forEach(t => {
        t.classList.remove('active');
        t.setAttribute('aria-selected', 'false');
      });
      tab.classList.add('active');
      tab.setAttribute('aria-selected', 'true');

      usrsetTabContents.forEach(content => {
        content.hidden = content.id !== target;
      });
    });
  });
</script>
