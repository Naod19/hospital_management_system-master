
  <div class="svc-form-container">
    <h2>Create Service</h2>
    <form class="svc-form" action="/createService" method="POST" enctype="multipart/form-data">

      <div>
        <label for="svc_name">Service Name</label>
        <input type="text" name="name" id="svc_name" required />
      </div>

      <div>
        <label for="svc_location">Location</label>
        <input type="text" name="location" id="svc_location">
      </div>

      <div>
        <label for="svc_phone">Phone</label>
        <input type="text" name="phone" id="svc_phone">
      </div>

      <div>
        <label for="svc_email">Email</label>
        <input type="email" name="email" id="svc_email">
      </div>

      <div>
        <label for="svc_images">Service Images</label>
        <input type="file" name="images" id="svc_images" multiple>
      </div>

      <div>
        <label for="svc_category">Category</label>
        <select name="category" id="svc_category" required>
          <option value="">-- Select Type --</option>
          <option value="hotel">Hotel</option>
          <option value="car">Car</option>
          <option value="eventhall">Event Hall</option>
          <option value="photographer">Photographer</option>
          <option value="decorator">Decorator</option>
          <option value="caterer">Caterer</option>
          <option value="dj">DJ</option>
          <option value="makeup_artist">Makeup Artist</option>
        </select>
      </div>

      <!-- HOTEL -->
      <div class="svc-extra-group" id="svc_hotel">
        <div class="svc-extra-inner">
          <div>
            <label for="svc_price_night">Price per Night</label>
            <input type="number" name="price_per_night" id="svc_price_night" step="0.01">
          </div>
          <div>
            <label for="svc_amenities">Amenities</label>
            <input type="text" name="amenities" id="svc_amenities" placeholder="Wi-Fi, Pool, Parking">
          </div>
          <div>
            <label for="svc_check_in">Check-in Time</label>
            <input type="time" name="check_in_time" id="svc_check_in">
          </div>
          <div>
            <label for="svc_check_out">Check-out Time</label>
            <input type="time" name="check_out_time" id="svc_check_out">
          </div>
        </div>
      </div>

      <!-- CAR -->
      <div class="svc-extra-group" id="svc_car">
        <div class="svc-extra-inner">
          <div>
            <label for="svc_brand">Brand</label>
            <input type="text" name="brand" id="svc_brand">
          </div>
          <div>
            <label for="svc_model">Model</label>
            <input type="text" name="model" id="svc_model">
          </div>
          <div>
            <label for="svc_features">Features</label>
            <input type="text" name="features" id="svc_features">
          </div>
          <div>
            <label for="svc_price_day">Price Per Day</label>
            <input type="number" name="rent_per_day" id="svc_price_day" step="0.01">
          </div>
          <div>
            <label for="svc_seats">Seats</label>
            <input type="number" name="seating_capacity" id="svc_seats">
          </div>
          <div>
            <label for="svc_transmission">Transmission</label>
            <select name="transmission" id="svc_transmission">
              <option value="Automatic">Automatic</option>
              <option value="Manual">Manual</option>
            </select>
          </div>
          <div>
            <label for="svc_fuel">Fuel Type</label>
            <select name="fuel_type" id="svc_fuel">
              <option value="Petrol">Petrol</option>
              <option value="Diesel">Diesel</option>
              <option value="Electric">Electric</option>
            </select>
          </div>
          <div>
            <label><input type="checkbox" name="air_conditioning"> Air Conditioning</label>
          </div>
        </div>
      </div>

      <!-- EVENT HALL -->
      <div class="svc-extra-group" id="svc_eventhall">
        <div class="svc-extra-inner">
          <div>
            <label for="svc_capacity">Capacity</label>
            <input type="number" name="capacity" id="svc_capacity">
          </div>
          <div>
            <label for="svc_price_hour">Price per Hour</label>
            <input type="number" name="price_per_hour" id="svc_price_hour" step="0.01">
          </div>
          <div>
            <label for="svc_facilities">Facilities</label>
            <input type="text" name="facilities" id="svc_facilities" placeholder="Stage, Sound System, Lighting">
          </div>
        </div>
      </div>

      <!-- PHOTOGRAPHER -->
      <div class="svc-extra-group" id="svc_photographer">
        <div class="svc-extra-inner">
          <div>
            <label for="svc_package">Package Details</label>
            <input type="text" name="package_details" id="svc_package">
          </div>
          <div>
            <label for="svc_price_package">Price per Package</label>
            <input type="number" name="price_per_package" id="svc_price_package" step="0.01">
          </div>
          <div>
            <label for="svc_equipment">Equipment</label>
            <input type="text" name="equipment" id="svc_equipment">
          </div>
        </div>
      </div>

      <!-- DECORATOR -->
      <div class="svc-extra-group" id="svc_decorator">
        <div class="svc-extra-inner">
          <div>
            <label for="svc_style">Decoration Style</label>
            <input type="text" name="style" id="svc_style">
          </div>
          <div>
            <label for="svc_theme">Theme Options</label>
            <input type="text" name="theme_options" id="svc_theme">
          </div>
          <div>
            <label for="svc_price_deco">Price</label>
            <input type="number" name="price" id="svc_price_deco" step="0.01">
          </div>
        </div>
      </div>

      <!-- CATERER -->
      <div class="svc-extra-group" id="svc_caterer">
        <div class="svc-extra-inner">
          <div>
            <label for="svc_menu">Menu</label>
            <input type="text" name="menu" id="svc_menu" placeholder="Buffet, Plated, Snacks">
          </div>
          <div>
            <label for="svc_price_person">Price per Person</label>
            <input type="number" name="price_per_person" id="svc_price_person" step="0.01">
          </div>
          <div>
            <label for="svc_cuisine">Cuisine</label>
            <input type="text" name="cuisine" id="svc_cuisine">
          </div>
        </div>
      </div>

      <!-- DJ -->
      <div class="svc-extra-group" id="svc_dj">
        <div class="svc-extra-inner">
          <div>
            <label for="svc_music_style">Music Style</label>
            <input type="text" name="music_style" id="svc_music_style">
          </div>
          <div>
            <label for="svc_price_hour_dj">Price per Hour</label>
            <input type="number" name="price_per_hour" id="svc_price_hour_dj" step="0.01">
          </div>
          <div>
            <label for="svc_equipment_dj">Equipment</label>
            <input type="text" name="equipment" id="svc_equipment_dj">
          </div>
        </div>
      </div>

      <!-- MAKEUP ARTIST -->
      <div class="svc-extra-group" id="svc_makeup_artist">
        <div class="svc-extra-inner">
          <div>
            <label for="svc_makeup_style">Makeup Style</label>
            <input type="text" name="makeup_style" id="svc_makeup_style">
          </div>
          <div>
            <label for="svc_price_session">Price per Session</label>
            <input type="number" name="price_per_session" id="svc_price_session" step="0.01">
          </div>
          <div>
            <label for="svc_products">Products Used</label>
            <input type="text" name="products_used" id="svc_products">
          </div>
        </div>
      </div>

      <button type="submit" class="svc-submit-btn">Create Service</button>
    </form>

  </div>

<script>
  const svcTypeSelect = document.getElementById('svc_category');
  const svcFields = {
    hotel: document.getElementById('svc_hotel'),
    car: document.getElementById('svc_car'),
    eventhall: document.getElementById('svc_eventhall'),
    photographer: document.getElementById('svc_photographer'),
    decorator: document.getElementById('svc_decorator'),
    caterer: document.getElementById('svc_caterer'),
    dj: document.getElementById('svc_dj'),
    makeup_artist: document.getElementById('svc_makeup_artist')
  };

  function svcToggleExtraFields() {
    const selected = svcTypeSelect.value;
    Object.keys(svcFields).forEach(type => {
      if (svcFields[type]) {
        svcFields[type].style.display = (type === selected) ? 'block' : 'none';
      }
    });
  }

  svcTypeSelect.addEventListener('change', svcToggleExtraFields);
  window.addEventListener('DOMContentLoaded', svcToggleExtraFields);
</script>
